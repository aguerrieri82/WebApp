{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": false,
    "sourceMap": true,
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },
  "buildOptions": {
    "incremental": true
  },
  "include": ["src"]
}
 
