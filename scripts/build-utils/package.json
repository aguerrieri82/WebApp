{
  "name": "build-utils",
  "version": "0.0.1",
  "packageManager": "pnpm@8.4.0",
  "type": "module",
  "bin": "dist/index.js",
  "scripts": {
    "install:pnpm": "pnpm install",
    "build": "tsc",
    "dist:dev": "node dist/index --dist --env:dev",
    "dist:prod": "node dist/index --dist --env:prod",
    "dist:pub": "node dist/index --dist --env:prod --publish --new",
    "upgrade": "pnpm up -latest"
  },
  "devDependencies": {
    "@types/node": "22.15.23",
    "typescript": "5.8.3"
  }
}